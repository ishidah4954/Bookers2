<% if @user.errors.any? %>
  <%= @user.errors.count %>errors
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class = "container">
  <div class = "row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User Info</h2>
         <%= form_with model:@user, local: true do |f| %>
         <div class = "form-group">
            <p>Name</p>
              <%= f.text_field :name, size: "40x20", autofocus: true, id:"inputName"%>
         </div>
         <div class = "form-group">
           <p>Image</p>
             <%= f.attachment_field :profile_image %>
         </div>
         <div class = "form-group">
           <p>Introduction</p>
             <%= f.text_area :introduction, size:"40x3", autofocus: true, id:"introduction"%>
          </div>
          <div>
             <%= f.submit 'Update User' %>
          </div>
         <% end %>
       </div>
    </div>
</div>
